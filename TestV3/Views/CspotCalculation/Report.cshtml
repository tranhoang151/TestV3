@model IEnumerable<TestV3.Models.CSPOT.TongHopCspot>
@{
    ViewData["Title"] = "Báo cáo CSPOT";
}

<div class="container-fluid">
    <h2>Báo cáo CSPOT</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lọc dữ liệu</h5>
        </div>
        <div class="card-body">
            <form asp-action="Report" method="get">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="startDate">Từ ngày:</label>
                            <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="endDate">Đến ngày:</label>
                            <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                        </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter"></i> Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Dữ liệu báo cáo</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Ngày</th>
                            <th>Sản lượng QM</th>
                            <th>Sản lượng QM1</th>
                            <th>Sản lượng QM2</th>
                            <th>Sản lượng TB</th>
                            <th>Sản lượng VT4</th>
                            <th>Sản lượng VT4 MR</th>
                            <th>Sản lượng DH3 MR</th>
                            <th>Chi phí CM1</th>
                            <th>Chi phí CM2</th>
                            <th>Chi phí TB</th>
                            <th>Chi phí VT4</th>
                            <th>Chi phí VT4 MR</th>
                            <th>Chi phí DH3 MR</th>
                            <th>Tổng chi phí</th>
                            <th>Chi phí TB</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Ngay?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.SanLuongQm</td>
                                    <td>@item.SanLuongQm1</td>
                                    <td>@item.SanLuongQm2</td>
                                    <td>@item.SanLuongTb</td>
                                    <td>@item.SanLuongVt4</td>
                                    <td>@item.SanLuongVt4Mr</td>
                                    <td>@item.SanLuongDh3Mr</td>
                                    <td>@item.ChiPhiCm1</td>
                                    <td>@item.ChiPhiCm2</td>
                                    <td>@item.ChiPhiTb</td>
                                    <td>@item.ChiPhiVt4</td>
                                    <td>@item.ChiPhiVt4Mr</td>
                                    <td>@item.ChiPhiDh3Mr</td>
                                    <td>@item.TongChiPhi</td>
                                    <td>
                                        @if (item.SanLuongQm > 0)
                                        {
                                            @(((decimal)item.TongChiPhi / (decimal)item.SanLuongQm).ToString("N2"))
                                        }
                                        else
                                        {
                                            <span>N/A</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">Không có dữ liệu</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>